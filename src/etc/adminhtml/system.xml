<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <section id="tdd_alibabacloud_oss_media" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
      <class>separator-top</class>
      <label>AlibabaCloud</label>
      <tab>tijsdriven</tab>
      <resource>TijsDriven_AlibabaCloudSts::configuration</resource>
      <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>AlibabaCloud Account Configuration</label>
        <field id="access_key_id" translate="label" type="obscure" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
          <label>Access Key ID</label>
        </field>
        <field id="access_key_secret" translate="label" type="obscure" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
          <label>Access Key Secret</label>
        </field>
      </group>
      <group id="sts_token" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
        <field id="token_lifetime" translate="label comment" type="text" sortOrder="500" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
          <label>Token Lifetime</label>
          <comment>In seconds (default: 3600)</comment>
          <validate>validate-zero-or-greater validate-digits</validate>
        </field>
      </group>
    </section>
  </system>
</config>
